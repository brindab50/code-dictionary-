<h2>Login</h2>
<p>
<% if flash[:errors] %>
<% flash[:errors].each do |error| %>
<%= error %>
<% end %>
<% end %>
<%= form_tag 'login' do %>
  <%= label_tag :Username %>
  <%= text_field_tag "user[username]" %><br>
  <%= label_tag :Password %>
  <%= password_field_tag "user[password]" %><br>
  <%= submit_tag :Submit %><br>
<% end %>
<%= button_to "CodeDictionary", codedictionary_path, method: :get %>
</p>